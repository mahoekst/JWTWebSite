@page
@model VerifyModel
@{
    ViewData["Title"] = "Verify";
}

    <div class="text-center">
        <h1 class="display-4">Verify</h1>
        <p>Enter JWT to Verify.</p>

        <form method="post">
            <textarea asp-for="Message.SignedBody" cols="30" rows="30" style=" min-width:500px; max-width:100%;max-height:350px;height:100%;width:100%;"></textarea>
            <br><br>
            <input type="submit" />
        </form>

        <p>Validated token:</p>
        <textarea asp-for="Message.Body" cols="30" rows="10"></textarea>
        <p>Result:</p>
        <text asp-for="Message.result">,</text>
    </div>

